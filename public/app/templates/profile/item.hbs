<article class="profile-page">
  <header>

    <div class="profile-image">
    {{#if user.profile_image}}
        <img src="{{#s3Url user.id user.profile_image}}{{/s3Url}}">
      {{else}}
        <img src="images/placeholders/placeholder_profile.png">
      {{/if}}
    </div>

    <div class="profile-info">
      <span class="user-name">{{ user.name }}</span>
      <br>
      <span class="user-area">{{ user.area }}</span>

      <div class="count-and-edit">
        <span class="photos-count">{{#countArr photos}} {{/countArr}} Fotos</span>
      </div>
    </div>
    <div class="profile-actions">
      <a href="#profile/{{ user.username }}" class="btn active">
        <span class="icon ion-ios-photos-outline"></span> <span class="text">Tus fotos</span>
      </a>

      <a href="#tagged/{{ user.username }}" class="btn">
        <i class="icon ion-ios-pricetags-outline"></i> <span class="text">Etiquetado</span>
      </a>

      {{#userAuthenticated user.id}}
      <a href="#profile/{{ user.id }}/edit" class="btn">
        Editar perfil
      </a>
      {{/userAuthenticated}}
    </div>
  </header>

</article>
