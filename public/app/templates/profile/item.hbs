<div class="row">
  <div class="col-lg-12">
    <img src="/images/{{ user.profile_image }}" class="img-circle pull-left" width="40">
    <h5>{{#countArr photos}} {{/countArr}} Fotos</h5>
    {{ user.name }}
    {{ user.area }}
    {{#userAuthenticated user.id}}
    <a href="/#profile/{{ user.id }}/edit" class="tagged btn btn-primary">
      Editar perfil
    </a>
    {{/userAuthenticated}}
    <hr>
    <ul class="nav nav-tabs" role="tablist">
    <li class="active">
      <a href="/#profile/{{ user.username }}">
        <span class="oi oi-grid-three-up"></span>
      </a>
    </li>
    <li><a href="/#tagged/{{ user.username }}"><i class="fa fa-picture-o"></i></a></li>
    </ul>

  </div>
</div>
<hr>
<div class="row">
  {{#each photos}}
  <a href="/#photo/{{ id }}">
    <img src="/images/{{ owner }}/{{ path }}" alt="" class="col-xs-4 col-sm-4" style="padding:2px"/>
  </a>
  {{/each}}
</div>

