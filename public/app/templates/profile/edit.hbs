
<form class="col-lg-12">
<div class="img-container" style="width: 60%; margin: 30px auto">
  <img src="http://placehold.it/500x500" class="img-responsive" style="border-radius: 50%;">
</div>

<span class="edit-profile-img">
  <button class="btn btn-primary btn-xs">Cambiar Imagen</button>
  <input type="file" class="uploadPhoto" name="photo">
</span>

  <div class="form-group">
    <input class="form-control" name="name" placeholder="Nombre" value="{{ name }}"/>
  </div>

  <div class="form-group">
    <select name="gender" class="form-control">
      {{#if gender}}
        <option value="{{ gender }}">{{ gender }}</option>
      {{else}}
        <option value="">Genero</option>
      {{/if}}
      
      <option value="Masculino">Masculino</option>
      <option value="Femenino">Femenino</option>
    </select>
  </div>

  <div class="form-group col-md-4 col-xs-4 col-sm-4">
  <select name="day" class="form-control ">
    {{#if day}}
      <option value="{{ day }}">{{ day }}</option>
    {{else}}
      <option value="">Día</option>
    {{/if}}
    
    <option value="1">1</option>
  </select>
  </div>

  <div class="form-group col-md-4 col-xs-4 col-sm-4">

  <select name="month" class="form-control">
    {{#if month}}
      <option value="{{ month }}">{{ month }}</option>
    {{else}}
      <option value="">Mes</option>
    {{/if}}
    
    <option value="1">1</option>
  </select>
  </div>
  <div class="form-group col-md-4 col-xs-4 col-sm-4">
  <select name="year" class="form-control">
    {{#if year}}
      <option value="{{ year }}">{{ year }}</option>
    {{else}}
       <option value="">Año</option>
    {{/if}}
   
    <option value="1980">1980</option>
  </select>
  </div>

  <div class="form-group">
    <select class="form-control" name="area">
      {{#if area}}
        <option value="{{ area }}">{{ area }}</option>
      {{else}}
        <option>Seleccionar Areá</option>
      {{/if}}
      
      <option value="Mercadeo">Mercadeo</option>
    </select>
  </div>
  
  <div class="form-group">
    <textarea class="fom-control" name="bio" placeholder="Bio">{{ bio }}</textarea>
  </div>
  
</form>