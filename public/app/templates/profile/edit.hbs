{{#if  profile_image}}
  <img src="/images/{{profile_image}}" class="img-circle" width="67">
{{/if}}

<span class="edit-profile-img">
  <button class="btn btn-primary btn-xs">Subir Imagen de perfil</button>
  <input type="file" class="uploadPhoto" name="photo">
</span>
<form method="post">

<div class="form-group">
  <input class="form-control" name="name" placeholder="Nombre" value="{{ name }}"/>
</div>

<div class="form-group">
  <select name="gender" class="form-control form-select">
    {{#if gender}}
    <option value="{{ gender }}">{{ gender }}</option>
    {{else}}
    <option value="">Genero</option>
    {{/if}}

    <option value="Masculino">Masculino</option>
    <option value="Femenino">Femenino</option>
  </select>
</div>

<div class="form-group col-md-4 col-xs-4 col-sm-4">
  <select name="day" class="form-control form-select-day">
    {{#if day}}
    <option value="{{ day }}">{{ day }}</option>
    {{else}}
    <option value="">Día</option>
    {{/if}}

    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
    <option value="6">6</option>
    <option value="7">7</option>
  </select>
</div>

<div class="form-group col-md-4 col-xs-4 col-sm-4">

  <select name="month" class="form-control form-select-month">
    {{#if month}}
    <option value="{{ month }}">{{ month }}</option>
    {{else}}
    <option value="">Mes</option>
    {{/if}}

    <option value="1">Enero</option>
    <option value="2">Febrero</option>
    <option value="3">Marzo</option>
    <option value="4">Abril</option>
    <option value="5">Mayo</option>
    <option value="6">Junio</option>
    <option value="7">julio</option>
    <option value="8">Agosto</option>
    <option value="9">Septiembre</option>
    <option value="10">Octubre</option>
    <option value="11">Noviembre</option>
    <option value="12">Diciembre</option>
  </select>
</div>

<div class="form-group col-md-4 col-xs-4 col-sm-4">
  <select name="year" class="form-control form-select-year">
    {{#if year}}
    <option value="{{ year }}">{{ year }}</option>
    {{else}}
    <option value="">Año</option>
    {{/if}}

    <option value="1980">1970</option>
    <option value="1980">1980</option>
    <option value="1980">1990</option>
  </select>
</div>

<div class="form-group">
  <select class="form-control form-select" name="area">
    {{#if area}}
    <option value="{{ area }}">{{ area }}</option>
    {{else}}
    <option>Seleccionar Areá</option>
    {{/if}}

    <option value="Mercadeo">Mercadeo</option>
  </select>
</div>

<div class="form-group">
  <textarea class="form-control" name="bio" placeholder="Bio">{{ bio }}</textarea>
</div>

</form>
